<%- include("partials/header") -%>

<div class="container container-modify">

    <div class="modify-form">
        <form action="/modify/<%= _id %>" method="post">
            <div class="form-group my-3">
                <label for="name" class="mb-1">Name</label>
                <input type="text" class="form-control" name="name" value="<%= name %>" id="name" required>
            </div>
            <div class="form-group my-3">
                <label for="email" class="mb-1">Email</label>
                <input type="email" class="form-control" name="email" value="<%= email %>" id="email" required>
            </div>
            <div class="form-group my-3 mx-2">
                <div class="form-check">
                    <input class="form-check-input" type="radio" name="owe" id="inlineRadio1" value="+" <%= owe === '+' ? 'checked' : '' %>>
                    <label class="form-check-label get-money" for="inlineRadio1">+ [ Someone owes money to you ]</label>
                </div>
                <div class="form-check">
                    <input class="form-check-input" type="radio" name="owe" id="inlineRadio2" value="-" <%= owe === '-' ? 'checked' : '' %>>
                    <label class="form-check-label pay-money" for="inlineRadio2">- [ You owe money to someone ]</label>
                </div>
            </div>
            <div class="form-group my-3">
                <label for="money" class="mb-1">Money</label>
                <input type="number" class="form-control" name="money" value="<%= money %>" id="money" required>
            </div>
            <button name="mod" type="submit" class="btn up-btn" value="update">Update</button>
            <button name="mod" type="submit" class="btn del-btn" value="delete">Delete</button>
            <a href="/" role="button" class="btn cl-btn">Close</a>
        </form>
    </div>

</div>

<%- include("partials/footer") -%>