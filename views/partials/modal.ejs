<!-- Button trigger modal -->
<!-- <button type="button" class="btn btn-modal" data-toggle="modal" data-target="#addModal">&plus;</button> -->
<button type="button" class="btn btn-modal" data-bs-toggle="modal" data-bs-target="#addModal">&plus;</button>

<!-- Modal -->
<div class="modal fade" id="addModal" tabindex="-1" role="dialog" aria-labelledby="addTitle" aria-hidden="true">
    <div class="modal-dialog modal-dialog-centered" role="document">
    <div class="modal-content">
        <div class="modal-header">
        <h5 class="modal-title" id="addTitle">Add</h5>
        <button type="button" class="btn-close" data-bs-dismiss="modal" aria-label="Close"></button>
        </div>
        <div class="modal-body">
            <form action="/" method="post">
                <div class="form-group my-3">
                    <label for="name" class="mb-1">Name</label>
                    <input type="text" class="form-control" name="name" id="name" required>
                </div>
                <div class="form-group my-3">
                    <label for="email" class="mb-1">Email</label>
                    <input type="email" class="form-control" name="email" id="email" required>
                </div>
                <div class="form-group my-3 mx-2">
                    <div class="form-check">
                        <input class="form-check-input" type="radio" name="owe" id="inlineRadio1" value="+" required>
                        <label class="form-check-label get-money" for="inlineRadio1">+ [ Someone owes money to you ]</label>
                    </div>
                    <div class="form-check">
                        <input class="form-check-input" type="radio" name="owe" id="inlineRadio2" value="-">
                        <label class="form-check-label pay-money" for="inlineRadio2">- [ You owe money to someone ]</label>
                    </div>
                </div>
                <div class="form-group my-3">
                    <label for="money" class="mb-1">Money</label>
                    <input type="number" class="form-control" name="money" id="money" required>
                </div>
        </div>
        <div class="modal-footer">
            <button type="button" class="btn" data-bs-dismiss="modal">Close</button>
            <button type="submit" class="btn up-btn">Add</button>
        </div>
    </form>
    </div>
    </div>
</div>